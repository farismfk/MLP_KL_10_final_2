<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:weightSum="10"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/txt_explore"
            android:text="Explore @ KL_10"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"

            android:textStyle="bold"
            android:textSize="34sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <GridLayout
        android:id="@+id/mainGrid"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="14dp">

        <!-- row 1 -->
        <!-- coloumn 1 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_kodikuthimala"
                    android:layout_width="wrap_content"

                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/kodikuthimala" />

                <TextView
                    android:text="KodiKuthiMala"
                    android:id="@+id/txt_kodikuthimala"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!-- row 1 -->
        <!-- coloumn 2 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_kottakkunnu"
                    android:src="@drawable/kottakkunnu"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp" />

                <TextView
                    android:text="Kottakkunnu"
                    android:id="@+id/txt_kottakkunnu"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!-- row 2 -->
        <!-- coloumn 1 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/nlmbrteak"
                    android:id="@+id/img_nlmbr_teak"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp" />

                <TextView
                    android:text="Nilambur"
                    android:id="@+id/txt_nlmbr_teak"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!-- row 2 -->
        <!-- coloumn 2 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/nedumkayam"
                    android:id="@+id/img_Nedumkayam"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp" />

                <TextView
                    android:text="Nedumkayam"
                    android:id="@+id/txt_Nedumkayam"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!-- row 3 -->
        <!-- coloumn 1 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/miniootty"
                    android:id="@+id/img_miniootty"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp" />

                <TextView
                    android:text="MiniOotty"
                    android:id="@+id/txt_miniootty"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>



        <!-- row 3 -->
        <!-- coloumn 2 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/kumaragiri"
                    android:id="@+id/img_kumaragiri"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp" />

                <TextView
                    android:text="Kumaragiri"
                    android:id="@+id/txt_kumaragiri"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </GridLayout>



</LinearLayout>